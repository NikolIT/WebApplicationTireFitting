@model WebApplicationTireFitting.Models.Client

@{
    ViewData["Title"] = "Create";
}

<h1>Додати клієнта</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">ПІБ</label>
                <input asp-for="FullName" class="form-control" maxlength="50"/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Номер телефону</label>
                <input asp-for="PhoneNumber" class="form-control" pattern="(\+380)[\-]\d{2}[\-]\d{3}[\-]\d{4}" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
