@model WebApplicationTireFitting.Models.Worker

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити цей запис?</h3>
<div>
    <h4>Worker</h4>
    <img src="@Url.Content(Model.PathWorkerImg)" alt="avatarFull" class="avatarFull">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("ПІБ")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Номер телефону")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Адресса проживання")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Ставка")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("День народження")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Посада")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPositionNavigation.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdWorker" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
    </form>
</div>
