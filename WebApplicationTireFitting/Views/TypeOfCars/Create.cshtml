@model WebApplicationTireFitting.Models.TypeOfCar

@{
    ViewData["Title"] = "Create";
}

<h1>Додати вид транспорту</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Назва</label>
                <input asp-for="TypeOfCar1" class="form-control" maxlength="50" />
                <span asp-validation-for="TypeOfCar1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
