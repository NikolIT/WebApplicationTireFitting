@model WebApplicationTireFitting.Models.Car

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Впевнені, що хочите видалити даний транспортний засіб?</h3>
<div>
    <h4>Car</h4>
    <img src="@Url.Content(Model.PathCarImg)" alt="avatarFull" class="avatarFull">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Назва")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Власник")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Клієнт")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdClientNavigation.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Вид транспорту")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdTypeOfCarNavigation.TypeOfCar1)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCar" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
    </form>
</div>
