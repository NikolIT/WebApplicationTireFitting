@model WebApplicationTireFitting.Models.Service

@{
    ViewData["Title"] = "Details";
}

<h1>Детальніше про послугу</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Назва")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Вартість")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
