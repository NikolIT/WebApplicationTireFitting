@model WebApplicationTireFitting.Models.Material

@{
    ViewData["Title"] = "Create";
}

<h1>Додати матеріал</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Назва</label>
                <input asp-for="NameMaterial" class="form-control"  maxlength="50"/>
                <span asp-validation-for="NameMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Вартість</label>
                <input asp-for="Price" class="form-control"  maxlength="5"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Фото</label>
                <input type="file" name="uploadedFile" accept=".jpg, .jpeg, .png" /><br>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
