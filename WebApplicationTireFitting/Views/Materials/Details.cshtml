@model WebApplicationTireFitting.Models.Material

@{
    ViewData["Title"] = "Details";
}

<h1>Детальніше про матеріал</h1>

<div>
    <h4>Material</h4>
    <img src="@Url.Content(Model.PathMaterialsImg)" alt="avatarFull" class="avatarFull">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Назва")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameMaterial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Вартість")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdMaterials"class="btn btn-outline-primary">Редагувати</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
</div>
