@model WebApplicationTireFitting.Models.Material

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити цей матеріал?</h3>
<div>
    <h4>Material</h4>
    <img src="@Url.Content(Model.PathMaterialsImg)" alt="avatarFull" class="avatarFull">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Назва")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameMaterial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Вартість")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdMaterials" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
    </form>
</div>
