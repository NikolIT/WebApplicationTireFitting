@model WebApplicationTireFitting.Models.Material

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагування</h1>

<h4>Матеріал</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMaterials" />
            <input type="hidden" name="PathMaterialsImg" value="@Model.PathMaterialsImg">
            <div class="form-group">
                <img src="@Url.Content(Model.PathMaterialsImg)" alt="avatarFull" class="avatarFull">
            </div>
            <div class="form-group">
                <label class="control-label">Назва</label>
                <input asp-for="NameMaterial" class="form-control" maxlength="50"/>
                <span asp-validation-for="NameMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Вартість</label>
                <input asp-for="Price" class="form-control" maxlength="5"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Фото</label>
                <input type="file" name="uploadedFile" accept=".jpg, .jpeg, .png" /><br>
            </div>
            <div class="form-group">
                <input type="submit" value="зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
