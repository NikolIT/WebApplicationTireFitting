@model WebApplicationTireFitting.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Створити замовлення</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Дада</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Клієнт</label>
                <select asp-for="IdClient" class="form-control" asp-items="ViewBag.IdClient"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Транспорт</label>
                <select asp-for="IdCar" class="form-control" asp-items="ViewBag.IdCar"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Вартість</label>
                <input asp-for="Price" class="form-control" maxlength="5"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Матеріали</label>
                <div class="prokrutka">
                    @foreach (var item in ViewBag.Materials)
                    {
                        <input name="idMaterials" type="checkbox" value="@item.IdMaterials" /> @item.NameMaterial <br />
                    }
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Працівники</label>
                <div class="prokrutka">
                    @foreach (var item in ViewBag.Workers)
                    {
                        <input name="idWorkers" type="checkbox" value="@item.IdWorker" /> @item.FullName <br />
                    }
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Послуги</label>
                <div class="prokrutka">
                    @foreach (var item in ViewBag.Services)
                    {
                        <input name="idServices" type="checkbox" value="@item.IdService" /> @item.ServiceName <br />
                    }

                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
